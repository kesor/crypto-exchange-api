{
    "name": "crypto-exchange-api",
    "version": "0.1.4",
    "description": "API wrapper for multiple Crypto Exchanges",
    "author": "Evgeny Zislis <evgeny.zislis@gmail.com>",
    "license": "MIT",
    "main": "./dist/index.js",
    "scripts": {
        "test": "cross-env NODE_ENV=test nyc mocha",
        "build": "cross-env NODE_ENV=production babel -d dist/ src",
        "lint": "eslint src test",
        "doc": "documentation build src/** -f html -o dist/doc",
        "prepare": "rm -rf dist && npm test -s && npm run -s build"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-eslint": "^7.2.3",
        "babel-plugin-istanbul": "^4.1.4",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-flow-comments": "^6.22.0",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-env": "^1.6.0",
        "babel-preset-flow": "^6.23.0",
        "cross-env": "^5.0.5",
        "documentation": "^5.2.2",
        "eslint": "^4.6.0",
        "eslint-config-standard": "^10.2.1",
        "eslint-plugin-flowtype": "^2.35.1",
        "eslint-plugin-import": "^2.7.0",
        "eslint-plugin-node": "^5.1.1",
        "eslint-plugin-promise": "^3.5.0",
        "eslint-plugin-standard": "^3.0.1",
        "flow-bin": "^0.54.0",
        "mocha": "^3.5.0",
        "nock": "^9.0.14",
        "nyc": "^11.1.0",
        "proxyquire": "^1.8.0",
        "sinon": "^3.2.1"
    },
    "optionalDependencies": {
        "fsevents": "1.1.2"
    },
    "babel": {
        "sourceMaps": true,
        "retainLines": true,
        "presets": [
            "flow",
            "env"
        ],
        "plugins": [
            "transform-runtime",
            "transform-class-properties",
            "transform-flow-comments",
            "transform-strict-mode"
        ]
    },
    "dependencies": {
        "debug": "^3.0.1"
    },
    "env": {
        "test": {
            "plugins": [
                "istanbul"
            ]
        }
    }
}
